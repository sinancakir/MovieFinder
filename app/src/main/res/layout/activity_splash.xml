<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bar"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="loodos.sinan.com.movies.ui.SplashActivity">

    <TextView
        android:id="@+id/activity_splash_txtLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_small"
        android:fontFamily="@string/sans_serif"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size"
        android:textStyle="bold"
        tools:text="Loodos Information Technologies" />

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/activity_splash_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_small"
        app:indicatorName="BallPulseSyncIndicator" />
</LinearLayout>